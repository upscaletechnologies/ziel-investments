/**
 * Notice that ES2018 target is needed to be able to use Optional Chaining and Nullish Coalescing, as ESNext target doesn't seem to support these features for now.
 */
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "types": ["@types/node", "@nuxt/types", "vue-apollo/types"],
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
